.module-group {
  padding: 40rpx;
  background-color: #ffffff;
}
.module-group .module-top {
    font-size: 36rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
}
.module-group .module-top .module-title {
      color: #494949;
}
.module-group .module-top .module-more {
      color: #41be57;
}
.module-group .module-scroll-view {
    margin-top: 40rpx;
    width: 100%;
    height: 400rpx;
    white-space: nowrap;
}
.module-group .module-scroll-view .item-navigator:last-of-type {
      margin-right: 0;
}
.module-group .module-scroll-view .item-navigator {
      width: 200rpx;
      margin-right: 20rpx;
      display: inline-block;
}
.module-group .module-scroll-view .item-navigator .item-group {
        width: 100%;
}
.module-group .module-scroll-view .item-navigator .item-group .thumbnail-group {
          width: 100%;
          height: 284rpx;
}
.module-group .module-scroll-view .item-navigator .item-group .thumbnail-group .thumbnail {
            width: 100%;
            height: 100%;
}
.module-group .module-scroll-view .item-navigator .item-group .item-title {
          font-size: 28rpx;
          text-align: center;
          margin-top: 20rpx;
          text-overflow: ellipsis;
          overflow: hidden;
}

