<view><view class="item-header"><view class="item-title">{{item.title+"("+item.year+")"}}</view><view class="item-detail"><view class="left-detail"><view class="item-rate"><star vue-id="1" rate="{{item.rating.average}}" starsize="{{30}}" fontsize="{{30}}" fontcolor="{{595959}}" bind:__l="__l"></star><text class="comment-persons">{{item.ratings_count+"人评价"}}</text></view><view class="item-sub-rate"><view class="item-type">{{''+item.durations[0]+" "+item.genres+''}}</view><view class="item-show">{{''+item.pubdates+" "+item.countries[0]+''}}</view><view class="item-actors">{{''+item.directors[0].name+"（导演）"+item.actors+''}}</view></view></view><view class="right-detail"><image src="{{item.images.small}}"></image></view></view></view><view class="item-tags"><view class="item-tags-title">豆瓣成员常用标签</view><view class="item-tags-list"><block wx:for="{{item.tags}}" wx:for-item="item1" wx:for-index="index" wx:key="index"><text>{{item1}}</text></block></view></view><view class="comment-list-group"><view class="comment-title">{{"短评("+comment.total+")"}}</view><block wx:for="{{comment}}" wx:for-item="item" wx:for-index="index" wx:key="index"><onecomment vue-id="{{'2-'+index}}" item="{{item}}" bind:__l="__l"></onecomment></block></view><navigator class="more-comment" url="{{'../comment/comment?id='+id+'&type='+type+'&thumbnail='+item.images.small+'&rate='+rate+'&title='+item.title}}">查看更多短评</navigator></view>